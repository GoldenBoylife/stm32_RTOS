/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12|GPIO_PIN_13, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, GPIO_PIN_7, GPIO_PIN_RESET);

  /*Configure GPIO pins : PD12 PD13 */
  GPIO_InitStruct.Pin = GPIO_PIN_12|GPIO_PIN_13;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

  /*Configure GPIO pin : PB7 */
  GPIO_InitStruct.Pin = GPIO_PIN_7;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */
void LED1Task(void *argument)
{
  uint32_t adc_value;
  char uart_buf[30];
  /* Infinite loop */
  for(;;)
  {
	  HAL_GPIO_TogglePin(GPIOB,GPIO_PIN_7);
	  osDelay(1500);
  }
}

void LED2Task(void *argument)
{
  uint32_t adc_value;
  char uart_buf[30];
  /* Infinite loop */
  for(;;)
  {
	  HAL_GPIO_TogglePin(GPIOD,GPIO_PIN_12);
	  osDelay(500);
  }
}

void RotationDefaultTask(void *argument)
{
  uint32_t adc_value;
  char uart_buf[30];
  /* Infinite loop */
  for(;;)
  {
	  HAL_ADC_Start(&hadc1);
	  HAL_ADC_PollForConversion(&hadc1,500);
	  adc_value = HAL_ADC_GetValue(&hadc1);
	  HAL_ADC_Stop(&hadc1);
	  memset(uart_buf,0,sizeof(uart_buf));
	  sprintf(uart_buf,"Rotation =%d\r\n", adc_value);
	  HAL_UART_Transmit_IT(&huart3,uart_buf,sizeof(uart_buf));
	  osDelay(1500);
  }
}

void SoundTask(void *argument)
{
  uint32_t adc_value;
  char uart_buf[30];
  /* Infinite loop */
  for(;;)
  {
	  HAL_ADC_Start(&hadc2);
	  HAL_ADC_PollForConversion(&hadc2,500);
	  adc_value = HAL_ADC_GetValue(&hadc2);
	  HAL_ADC_Stop(&hadc2);
	  memset(uart_buf,0,sizeof(uart_buf));
	  sprintf(uart_buf,"Sound =%d\r\n", adc_value);
	  HAL_UART_Transmit_IT(&huart3,uart_buf,sizeof(uart_buf));
	  osDelay(100);
  }
}
void MagneticTask(void *argument)
{
  uint32_t adc_value;
  char uart_buf[30];
  /* Infinite loop */
  for(;;)
  {
	  HAL_ADC_Start(&hadc3);
	  HAL_ADC_PollForConversion(&hadc3,500);
	  adc_value = HAL_ADC_GetValue(&hadc3);
	  HAL_ADC_Stop(&hadc3);
	  memset(uart_buf,0,sizeof(uart_buf));
	  sprintf(uart_buf,"Magnetic =%d\r\n", adc_value);
	  HAL_UART_Transmit_IT(&huart3,uart_buf,sizeof(uart_buf));
	  osDelay(500);
  }
}
/* USER CODE END 4 */

